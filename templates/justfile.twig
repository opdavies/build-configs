# {{ managedText | raw }}

default:
  @just --list

{% if "php" is same as language %}
composer *args:
  {{ "just _exec php composer {{ args }}" | raw }}
{% endif %}

{% if "drupal-project" is same as type %}
drush *args:
  {{ "just _exec php drush {{ args }}" | raw }}

install *args:
  just _exec php drush site:install -y {{ args }}
{% endif %}

_exec +args:
  {{ "docker compose exec {{ args }}" | raw }}
